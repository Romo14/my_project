{% extends 'base.html.twig' %}

 {% block header %}
     {{ include(':user:header.html.twig') }}
 {% endblock %}

{% block body %}
    <div>
        <form method="post" action="{{ action }}" novalidate="novalidate">
            <div>
                {{ dump(form.vars.value) }}
                <ul>
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>

            </div>
            <div>{{ form_errors(form.email) }}{{ form_label(form.email) }}: {{ form_widget(form.email) }}</div>
            <div>{{ form_label(form.username) }}: {{ form_widget(form.username) }}</div>
            {{ form_rest(form) }}
            <div><input type="submit" value="Ok"></div>
        </form>
    </div>
{% endblock %}

{% block footer %}
    {{ include(':user:footer.html.twig') }}
{% endblock %}
